{
  "$id": "https://interoperabledata.org/schemas/function_manifest/function_manifest.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Function Manifest",
  "type": "object",
  "properties": {
    "in": {
      "type": "array",
      "items": { "$ref": "#/$defs/inputDescriptor" }
    },
    "out": {
      "type": "array",
      "items": { "$ref": "#/$defs/outputDescriptor" }
    }
  },
  "required": ["in", "out"],
  "additionalProperties": false,

  "$defs": {
    "inputDescriptor": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "name": { "type": "string" },
            "schema": { "type": "string" }
          },
          "required": ["name", "schema"],
          "additionalProperties": false
        },
        {
          "properties": {
            "name": { "type": "string" },
            "files": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1
            }
          },
          "required": ["name", "files"],
          "additionalProperties": false
        }
      ]
    },

    "outputDescriptor": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "name": { "type": "string" },
            "schema": { "type": "string" }
          },
          "required": ["name", "schema"],
          "additionalProperties": false
        },
        {
          "properties": {
            "name": { "type": "string" },
            "file": { "type": "string" }
          },
          "required": ["name", "file"],
          "additionalProperties": false
        }
      ]
    }
  }
}
